<UserControl
    x:Class="DidacticalEnigma.UsageDataSourcePreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DidacticalEnigma"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:DidacticalEnigma.ViewModels"
    d:DataContext="{d:DesignInstance Type=vms:UsageDataSourcePreviewVM,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <vms:TreeSplitDataTemplateSelector x:Key="RecursiveTree">
            <vms:TreeSplitDataTemplateSelector.RootTemplate>
                <DataTemplate DataType="{x:Type vms:Root}">
                    <ContentPresenter Content="{Binding Tree}" />
                </DataTemplate>
            </vms:TreeSplitDataTemplateSelector.RootTemplate>
            <vms:TreeSplitDataTemplateSelector.VSplitTemplate>
                <DataTemplate DataType="{x:Type vms:VSplit}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Grid.Column="0" Content="{Binding First}" />
                        <GridSplitter Grid.Column="1" />
                        <ContentPresenter Grid.Column="2" Content="{Binding Right}" />
                    </Grid>
                </DataTemplate>
            </vms:TreeSplitDataTemplateSelector.VSplitTemplate>
            <vms:TreeSplitDataTemplateSelector.HSplitTemplate>
                <DataTemplate DataType="{x:Type vms:HSplit}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ContentPresenter Grid.Row="0" Content="{Binding First}" />
                        <GridSplitter Grid.Row="1" />
                        <ContentPresenter Grid.Row="2" Content="{Binding Right}" />
                    </Grid>
                </DataTemplate>
            </vms:TreeSplitDataTemplateSelector.HSplitTemplate>
            <vms:TreeSplitDataTemplateSelector.LeafTemplate>
                <DataTemplate DataType="{x:Type vms:Leaf}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <UniformGrid Grid.Row="0" Rows="3">
                            <Button Command="{Binding HSplit}" Content="HSplit" />
                            <Button Command="{Binding VSplit}" Content="VSplit" />
                            <Button Content="Close" />
                        </UniformGrid>
                        <TextBlock Grid.Row="1" Text="{Binding Content}" />
                    </Grid>
                </DataTemplate>
            </vms:TreeSplitDataTemplateSelector.LeafTemplate>
        </vms:TreeSplitDataTemplateSelector>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <ListView
            ItemsSource="{Binding DataSources}"
            SelectedIndex="{Binding SelectedDataSourceIndex}"
            SelectedItem="{Binding SelectedDataSource}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Descriptor.Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ContentPresenter
            Grid.Column="1"
            Content="{Binding Root}"
            ContentTemplateSelector="{StaticResource RecursiveTree}">
            <ContentPresenter.Style>
                <Style TargetType="ContentPresenter">
                    <Setter Property="ContentTemplateSelector" Value="{StaticResource RecursiveTree}" />
                </Style>
            </ContentPresenter.Style>

        </ContentPresenter>
