<UserControl
    x:Class="DidacticalEnigma.UsageDataSourcePreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DidacticalEnigma"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="clr-namespace:DidacticalEnigma.ViewModels"
    d:DataContext="{d:DesignInstance Type=vms:UsageDataSourcePreviewVM,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding DataSources}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Descriptor.Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <FlowDocumentScrollViewer Grid.Column="1" />
    </Grid>
</UserControl>
