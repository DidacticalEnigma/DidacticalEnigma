<Window
    x:Class="DidacticalEnigma.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DidacticalEnigma"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AboutWindow"
    Width="400"
    Height="600"
    mc:Ignorable="d">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            IsReadOnly="True"
            Text="{Binding AboutText, RelativeSource={RelativeSource FindAncestor, AncestorType=local:AboutWindow}, Mode=OneWay}" />
        <Button
            Grid.Row="1"
            Click="Exit"
            Content="OK" />
    </Grid>
</Window>
